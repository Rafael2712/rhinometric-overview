# ───────────────────────────────────────────────────────────────────────────
# GRAFANA CONFIGURATION
# ───────────────────────────────────────────────────────────────────────────
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=          # CHANGE: generate with: openssl rand -base64 24
GF_SERVER_HTTP_PORT=3000

# ───────────────────────────────────────────────────────────────────────────
# DATABASE CONFIGURATION
# ───────────────────────────────────────────────────────────────────────────
POSTGRES_USER=rhinometric
POSTGRES_PASSWORD=               # CHANGE: generate with: openssl rand -base64 32
POSTGRES_DB=rhinometric_trial

# ───────────────────────────────────────────────────────────────────────────
# REDIS CONFIGURATION
# ───────────────────────────────────────────────────────────────────────────
REDIS_PASSWORD=                  # CHANGE: generate with: openssl rand -base64 24

# ───────────────────────────────────────────────────────────────────────────
# LICENSE CONFIGURATION
# ───────────────────────────────────────────────────────────────────────────
LICENSE_KEY=RHINO-TRIAL-2025-XXXXXXXXXXXX
LICENSE_TYPE=trial
LICENSE_EXPIRY=2025-12-31

# ───────────────────────────────────────────────────────────────────────────
# SMTP CONFIGURATION (Optional - for email notifications)
# ───────────────────────────────────────────────────────────────────────────
SMTP_HOST=smtp.zoho.eu
SMTP_PORT=465
SMTP_USER=                        # Your SMTP login email
SMTP_PASSWORD=                    # Your SMTP app password
SMTP_FROM=                        # Sender address (usually same as SMTP_USER)

# ───────────────────────────────────────────────────────────────────────────
# PORTS CONFIGURATION
# ───────────────────────────────────────────────────────────────────────────
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
LOKI_PORT=3100
TEMPO_PORT=3200
LICENSE_SERVER_PORT=5000
LICENSE_UI_PORT=8092

# ───────────────────────────────────────────────────────────────────────────
# DATA PERSISTENCE
# ───────────────────────────────────────────────────────────────────────────
DATA_DIR=./rhinometric_data
